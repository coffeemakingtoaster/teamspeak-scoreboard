    <div class="leaderboard-container">
        <table class="leaderboard-table">
            <thead>
                <tr>
                    <th>Rank</th>
                    <th>Name</th>
                    <th>Time (dd:hh:mm)</th>
                    <th>AFK-Warns</th>
                </tr>
